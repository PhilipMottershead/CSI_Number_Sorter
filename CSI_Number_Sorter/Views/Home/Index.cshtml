@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}
<div class="inner cover text-center">

    <h1 class="cover-heading">Cover your page.</h1>
    <p class="lead">Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.</p>
    <p class="lead">
        <a class="btn btn-lg btn-secondary" asp-area="" asp-controller="SortedNumbers" asp-action="Index">Sort History</a>
        <a class="btn btn-lg btn-secondary" asp-area="" asp-controller="SortedNumbers" asp-action="Create">Sort Numbers</a>
    </p>
</div>

